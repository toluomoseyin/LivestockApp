
@model AddAgentViewModel
@using AnimalFarmsMarket.Data.Enum



<!-- Button trigger Agent Registration Form Modal -->
<div class="p-5" id="agent-reg">
    <div class="row">

        <div class="col-sm-8 col-sm-offset-2  justify-content-center mx-auto rounded p-5" id="agent-intro" style="border:1px solid #eee">
            <div class="col-12">
                <div class="col-12">
                    <h3 class="text-center font-weight-bold color-primary" id="agent-form__lead">Be an Agent</h3>

                    <p class="text-center px-3">
                        Join the largest community of breed improvements specialist and animal science
                        prefessionals
                    </p>
                </div>




                <div class="d-flex justify-content-around flex-wrap">
                    <div class="p-4 col-lg-6 col-sm-4">

                        <div class="col-12">
                            <img src="/images/assets/Group 3.png" class="mx-auto d-block" alt="Alternate Text" />
                            <h5 class="text-center font-weight-bold color-primary" id="agent-form__lead">Becoming an Agent</h5>
                            <p class="text-center px-3">An agent must have a valid National Identity Card (NIN)</p>
                        </div>

                        <div class="text-center">
                           @* <button type="button" class="btn btn-primary mt-3" data-toggle="modal" id="create-agent__btn" data-target="#exampleModalLong">
                                Proceed to Form
                            </button>*@
                            <a asp-area="" class="btn btn-primary mt-3" controller="Account" asp-action="AgentRegistration">Proceed to Form</a>
                            
                        </div>
                    </div>

                    <!--col 2-->
                    <div class="p-4 col-lg-6 col-sm-4" style="border-left:1px solid #eee;">
                        <div class="col-12">
                            <img src="/images/assets/Group 2.png" class="mx-auto d-block" alt="Alternate Text" />
                            <h5 class="text-center font-weight-bold color-primary" id="agent-form__lead">Role of The Agent</h5>
                            <p class="text-center px-3">
                                The agent ordinarily has an existing relationship with a livestock producer, rancher or merchant. And
                                as such, he/she serves as the link between the platform and the livestock owner by ensuring pre-slaughter
                                evaluation as
                                established by the quality assurance department.
                            </p>
                        </div>

                    </div>
                </div>


            </div>

        </div>




    </div>
</div>

<partial name="_FooterLowerPartial" />

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}